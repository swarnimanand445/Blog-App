<% include partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%= blog12.title %></div>
        <form class="ui form" action="/blog/<%= blog12._id %>?_method=PUT" method="POST">
            <div class="field">
                    <label>Title</label>
                    <input  type="text" value="<%=blog12.title %>" name="blog[title]">
            </div>
            <div class="field">
                    <label>Image</label>
                    <input  type="text" value="<%=blog12.image %>" name="blog[image]">
            </div>
            <div class="field">
                    <label>Blog Content</label>
                    <textarea name="blog[body]"><%= blog12.body %></textarea>
            </div>
            <div class="field">
                <input class="ui violet big basic button"type="submit">
            </div>
        </form>
    </div>
<% include partials/footer %>